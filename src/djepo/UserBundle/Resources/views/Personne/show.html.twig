{% extends "djepoUserBundle::adminlayout.html.twig" %}
{% block meta %} 
	  <meta name="description" content="Afficher Personne">
	  <meta name='ROBOTS' content="noindex,nofollow">
 {% endblock %} 
{% block title %} {{ parent()~' - ' ~ 'Ville'  }}  {% endblock %}
{% block navigsite %} 
          <ol class="breadcrumb">
            <li> <a href="{{ path('djepoMain_accueil') }}"> {{ djepo_home }} </a> </li>
            <li><a  href="{{ path('djepoUser_profile') }}"> Admin </a></li>
            <li class="active">Afficher Personne</li>
        </ol>
          
{% endblock %}

{% block principal %}	
       
  {{ parent() }} 
<br>

<h1>{{ app.user.username }}: Personne</h1>

<div class="row"> 
    <div class="col-sm-10 table-responsive">
          <table class="table table-bordered table-striped table-condensed">
    <tbody>
           {% if is_granted('ROLE_ADMIN') %}
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            {% endif %}
        {% if entity.typeEntite != ""  %}
             <tr>
                <th>Typeentite</th>
                <td>{{ entity.typeEntite }}</td>
            </tr>
             {% endif %}
        {% if entity.firstname!= ""  %}
              <tr>
                <th>Firstname</th>
                <td>{{ entity.firstname }}</td>
            </tr>
              {% endif %}
        {% if entity.lastname!= ""  %}
            <tr>
                <th>lastname</th>
                <td>{{ entity.lastname }}</td>
            </tr>
                {% endif %}
        {% if entity.dateN!= ""  %}
            <tr>
                <th>Daten</th>
                <td>{{ entity.dateN|date('Y-m-d H:i:s') }}</td>
            </tr>
             {% endif %}
        {% if entity.telFixe!= ""  %}
            <tr>
                <th>Telfixe</th>
                <td>{{ entity.telFixe }}</td>
            </tr>
             {% endif %}
        {% if entity.telPortable!= ""  %}
            <tr>
                <th>Telportable</th>
                <td>{{ entity.telPortable }}</td>
            </tr>
              {% endif %}
        {% if entity.Fax!= ""  %}
            <tr>
                <th>Fax</th>
                <td>{{ entity.fax }}</td>
            </tr>
            {% endif %}
        </tbody>
    </table>
        </div>
    </div>
    <div class="row">    
        <ul  class="nav navbar-nav" >
                <li>
                    <a href="{{ path('personne') }}">
                        Back to the list
                    </a>
                </li>
                <li>
                    <a href="{{ path('personne_edit', { 'id': entity.id }) }}">
                        Edit
                    </a>
                </li>
                <li>
                    <form action="{{ path('personne_delete', { 'id': entity.id }) }}" method="post">
                        <input type="hidden" name="_method" value="DELETE" />
                        {{ form_widget(delete_form) }}
                        <button type="submit">Delete</button>
                    </form>
                </li>
            </ul>
  </div>
{% endblock %}
