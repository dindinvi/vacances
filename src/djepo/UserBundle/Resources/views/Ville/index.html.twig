{% extends "djepoUserBundle::adminlayout.html.twig" %}

{% block meta %} 
  <meta name="description" content="Index Villes">
  <meta name='ROBOTS' content="noindex,nofollow">
 {% endblock %} 

{% block title %} {{ parent()~' - ' ~ 'Index Ville'  }}  {% endblock %}
{% block navigsite %} 
  <ol class="breadcrumb">
            <li> <a href="{{ path('djepoMain_accueil') }}"> {{ djepo_home }} </a> </li>
            <li><a  href="{{ path('djepoUser_profile') }}"> Admin </a></li>
            <li class="active">Villes</li>
        </ol>
{% endblock %} 

{% block principal %}	
  {{ parent() }} 
<br>
<h1>Adresse list</h1>

  <div class="table-responsive">
     <table class="table table-bordered table-striped table-condensed">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nomville</th>
            <th>Codedepartement</th>
            <th>Libelle</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    {% for entity in entities %}
        <tr>
            <td><a href="{{ path('ville_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
            <td>{{ entity.nomVille }}</td>
            <td>{{ entity.codeDepartement }}</td>
            <td>{{ entity.libelle }}</td>
            <td>
                <ul>
                    <li>
                        <a href="{{ path('ville_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('ville_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
            </td>
        </tr>
    {% endfor %}
    </tbody>
</table>
</div>
<ul>
    <li>
        <a href="{{ path('ville_new') }}">
            Create a new entry
        </a>
    </li>
</ul>
{% endblock %}