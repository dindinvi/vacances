{% extends "djepoUserBundle::adminlayout.html.twig" %}
{% block meta %} 
 <meta name="description" content="Modifier mes coordonnées">
 <meta name='ROBOTS' content="noindex,nofollow">
	  {% endblock %} 
{% block title %} {{ parent() ~ ' -  Modifier mes coordonnées'  }}  {% endblock %}
 
{% block navigsite %} 
 
<ol class="breadcrumb">
            <li> <a href="{{ path('djepoMain_accueil') }}"> {{ djepo_home }} </a> </li>
            <li><a  href="{{ path('djepoUser_profile') }}"> Admin </a></li>
           <li><a href="{{ path('adresse_show', { 'id':app.user.adresse.id }) }}"> Mes coordonnées </a> </li> 
            <li class="active">Modifier mes coordonnées. </li>
        </ol>
 
{% endblock %}

{% block principal %}	
  {{ parent() }} 
<br>

<h1>{{ app.user.username }} : Modifier mes coordonnées.</h1>

<form action="{{ path('adresse_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
            
		<div class="panel panel-default">
                <div class="panel-heading"> <h3 >Adresse</h3>  </div>
                <div class="panel-body"> 
                       <div class="row form-group">
                            <div class="col-sm-2">{{ form_label(edit_form.numeroVoie) }}</div>
                            <div class="col-sm-7">{{ form_widget(edit_form.numeroVoie, { 'attr': {'class': 'form-control' } }) }}</div>
                            <div class="col-sm-3"> <span class="text-warning"> {{ form_errors(edit_form.numeroVoie) }} </span></div>
                        </div>
                                
                            <div class="row form-group">
                            <div class="col-sm-2">{{ form_label(edit_form.libelleAdd) }}</div>
                            <div class="col-sm-7">{{ form_widget(edit_form.libelleAdd, { 'attr': {'class': 'form-control' } }) }}</div>
                            <div class="col-sm-3"> <span class="text-warning"> {{ form_errors(edit_form.libelleAdd) }} </span></div>
                        </div>
                                
                           <div class="row form-group">
                            <div class="col-sm-2">{{ form_label(edit_form.codePostal) }}</div>
                            <div class="col-sm-7">{{ form_widget(edit_form.codePostal, { 'attr': {'class': 'form-control' } }) }}</div>
                            <div class="col-sm-3"> <span class="text-warning"> {{ form_errors(edit_form.codePostal) }} </span></div>
                        </div>       
                                 
			<div class="row form-group">
                            <div class="col-sm-2">{{ form_label(edit_form.ville.nomVille) }}</div>
                            <div class="col-sm-7">{{ form_widget(edit_form.ville.nomVille, { 'attr': {'class': 'form-control' } }) }}</div>
                            <div class="col-sm-3"> <span class="text-warning"> {{ form_errors(edit_form.ville.nomVille) }} </span></div>
                        </div>
                                
                           <div class="row form-group">
                            <div class="col-sm-2 ">{{ form_label(edit_form.ville.libelle) }}</div>
                            <div class="col-sm-7">{{ form_widget(edit_form.ville.libelle, { 'attr': {'class': 'form-control' } }) }}</div>
                            <div class="col-sm-3"> <span class="text-warning"> {{ form_errors(edit_form.ville.libelle) }} </span></div>
                        </div> 	 
                  </div>
                </div>    


      <button type="submit"> Modifier mes coordonnées</button>  
</form>

<br><br>
<ul>
    <li class="pull-right"> <a href="{{ path('djepoUser_profile') }}">  Acceuil  administration  </a></li>
 {% if is_granted('ROLE_ADMIN') %}
        <li>
            <form action="{{ path('adresse_delete', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }} >
                {{ form_widget(delete_form) }}
                <button type="submit">Delete</button>
            </form>
        </li>
     {% endif %}
</ul>
<br><br><br>
{% endblock %}
