{% extends '::base.html.twig' %}

{% block body -%}
    <h1>Adresse</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Numerovoie</th>
                <td>{{ entity.numeroVoie }}</td>
            </tr>
            <tr>
                <th>Libelleadd</th>
                <td>{{ entity.libelleAdd }}</td>
            </tr>
            <tr>
                <th>Codepostal</th>
                <td>{{ entity.codePostal }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('adresse') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('adresse_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('adresse_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
