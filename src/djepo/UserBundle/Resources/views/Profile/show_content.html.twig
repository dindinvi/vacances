                 <div class="row form-group">
                            <div class="col-sm-2">{{ 'fos_user_profile_form_telFixe'|trans({}, 'djepoUserBundle') }}</div>
                            <div class="col-sm-7">{{  user.personne.telFixe }}</div>
                            
                        </div>       
                                 
			<div class="row form-group">
                            <div class="col-sm-2">{{ 'fos_user_profile_form_telPortable'|trans({}, 'djepoUserBundle') }}</div>
