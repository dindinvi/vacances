{% extends '::base.html.twig' %}

{% block body -%}
    <h1>location</h1>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
            <tr>
                <th>Datelocation</th>
                <td>{{ entity.dateLocation|date('Y-m-d H:i:s') }}</td>
            </tr>
            <tr>
                <th>Montantloyer</th>
                <td>{{ entity.montantLoyer }}</td>
            </tr>
            <tr>
                <th>Typeloyer</th>
                <td>{{ entity.typeLoyer }}</td>
            </tr>
            <tr>
                <th>Montantcharges</th>
                <td>{{ entity.montantCharges }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('location') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('location_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>
        <form action="{{ path('location_delete', { 'id': entity.id }) }}" method="post">
            <input type="hidden" name="_method" value="DELETE" />
            {{ form_widget(delete_form) }}
            <button type="submit">Delete</button>
        </form>
    </li>
</ul>
{% endblock %}
