                <td>{% if entity.dateFinPrestation %}{{ entity.dateFinPrestation|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.montant }}</td>
                <td>{{ entity.commentaire }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('locationprestation_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('locationprestation_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('locationprestation_new') }}">
