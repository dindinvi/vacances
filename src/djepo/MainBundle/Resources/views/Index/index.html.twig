		  <br>  <br> <div class="cadre">
		       <br>{{ app.session.flash('blogger-architecte') }} <br>  <br>
                     </div>  <br>
	 {% endif %} 
	 {% if app.session.hasFlash('projet_def') %}
	    <br>  <br> <div class="cadre">
		  <br>  {{ app.session.flash('projet_def') }} <br> <br>
		 </div>  <br>
	 {% endif %}
   <br> 
     
   <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <div id="carousel" class="carousel slide">
                <div class="carousel-inner">
                    <div class="item active"> <img src="{{ asset('bundles/djepobootstrap/images/B.jpg') }}" alt="{{websiteName}}" class="img-responsive"></div>
                    <div class="item"><img src="{{ asset('bundles/djepobootstrap/images/1.JPG') }}" alt="{{websiteName}}" class="img-responsive"></div>
                    <div class="item"><img src="{{ asset('bundles/djepobootstrap/images/A.jpg') }}" alt="{{websiteName}}" class="img-responsive"></div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-offset-2 col-lg-8">
            <div class="btn-group" data-toggle="buttons">
                <label class="btn btn-success" id="first"> <input type="radio" name="options"><span class="glyphicon glyphicon-fast-backward"></span>  </label>
                <label class="btn btn-success" id="previous"> <input type="radio" name="options"><span class="glyphicon  glyphicon-step-backward"></span> </label>
                <label class="btn btn-success" id="pause"> <input type="radio" name="options"><span class="glyphicon glyphicon-pause"></span>  </label>
                <label class="btn btn-success active" id="play"> <input type="radio" name="options"><span class="glyphicon glyphicon-play"></span>  </label>
                <label class="btn btn-success" id="next">
                <input type="radio" name="options"><span class="glyphicon glyphicon-step-forward"></span>  </label>
                <label class="btn btn-success" id="last"> <input type="radio" name="options"><span class="glyphicon glyphicon-fast-forward"></span>
                </label>
            </div>
            <p><span class="label label-info"></span></p>
        </div>
    </div>
  
   
{% endblock %}
   {% block javascripts %}	
             {{ parent() }} 
            <script>
               $(function () {
                       $('.carousel').carousel({ interval: 2000 });
                       $('#first').click(function() { $('.carousel').carousel(0); });
                       $('#previous').click(function() { $('.carousel').carousel('prev'); });
                       $('#pause').click(function() { $('.carousel').carousel('pause'); });
                       $('#play').click(function() { $('.carousel').carousel('cycle'); });
                       $('#next').click(function() { $('.carousel').carousel('next'); });
                       $('#last').click(function() { $('.carousel').carousel(2); });

                       $('.carousel').on('slid.bs.carousel', function () {
                           var total = $('.item').length;
                           var current = $('.item.active').index() + 1;
                           $('.label').text(current + ' / '+ total);
                        });
               });
               </script>
